<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CurrentTimeTable">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="321dp"
        android:layout_height="75dp"
        android:layout_marginTop="16dp"
        android:text="Select the day"
        android:textColor="#072BF4"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mon"
        android:layout_width="271dp"
        android:layout_height="75dp"
        android:layout_marginTop="24dp"
        android:onClick="mond"
        android:text="Monday"
        android:textAllCaps="false"
        android:textSize="34sp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/tue"
        android:layout_width="263dp"
        android:layout_height="68dp"
        android:layout_marginTop="36dp"
        android:onClick="tuesd"
        android:text="Tuesday"
        android:textAllCaps="false"
        android:textSize="34sp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mon" />

    <Button
        android:id="@+id/wed"
        android:layout_width="269dp"
        android:layout_height="77dp"
        android:layout_marginTop="36dp"
        android:onClick="wednesday"
        android:text="Wednesday"
        android:textAllCaps="false"
        android:textSize="34sp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tue" />

    <Button
        android:id="@+id/thu"
        android:layout_width="256dp"
        android:layout_height="77dp"
        android:layout_marginTop="32dp"
        android:onClick="thursday"
        android:text="Thursday"
        android:textAllCaps="false"
        android:textSize="34sp"
        app:cornerRadius="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wed" />

    <Button
        android:id="@+id/fri"
        android:layout_width="255dp"
        android:layout_height="68dp"
        android:layout_marginTop="28dp"
        android:onClick="friday"
        android:text="Friday"
        android:textAllCaps="false"
        android:textSize="34sp"
        app:cornerRadius="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thu" />

    <Button
        android:id="@+id/sat"
        android:layout_width="248dp"
        android:layout_height="66dp"
        android:onClick="saturday"
        android:text="Saturday"
        android:textAllCaps="false"
        android:textSize="34sp"
        app:cornerRadius="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fri"
        app:layout_constraintVertical_bias="0.326" />
</androidx.constraintlayout.widget.ConstraintLayout>